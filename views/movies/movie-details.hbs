<h1 class='text-3xl font-semibold text-gray-900 ml-10 mt-28 mb-5'>All movies:</h1>

<div class='columns-2 gap-8'>
  {{#with this}}
    <div class='max-w-sm rounded overflow-hidden shadow-lg ml-5'>
      <div class='px-6 py-4'>
        <div class='font-bold text-xl mb-2'>Title:
          <span class='font-normal'>{{title}}</span></div>
        <div class='font-bold text-xl mb-2'>Genre:
          <span class='font-normal'>{{genre}}</span></div>
        <div class='font-bold text-xl mb-2'>Plot:</div>
        <p class='text-gray-700 text-base ml-4'>
          {{plot}}
        </p>
        <div class='font-bold text-xl mb-2'>Cast:</div>
        {{#each cast}}
          <ul>
            <li class='ml-4'><p><b>Name: </b>{{name}}</p></li>
            <li class='ml-4'><p><b>Occupation: </b>{{occupation}}</p></li>
            <li class='ml-4'><p><b>Catchphrase: </b>{{catchphrase}}</p></li>
            <hr />
          </ul>
        {{/each}}
      </div>
      <div class='flex space-x-2 justify-center'>
        <form
          class='w-full max-w-lg text-center'
          action='/movies/{{id}}/delete'
          method='POST'
        >
          <button
            type='submit'
            class='focus:outline-none text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:ring-red-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-red-600 dark:hover:bg-red-700 dark:focus:ring-red-900'
          >Delete Movie</button>
        </form>
        {{!-- <form
          class='w-full max-w-lg text-center'
          action='/movies/{{id}}/edit'
          method='POST'
        > --}}
        <a href='/movies/{{id}}/edit' class='w-full max-w-lg text-center'>
          <button
            type='button'
            class='focus:outline-none text-white bg-blue-400 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 mr-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-900'
          >Edit Movie</button>
        </a>

        {{! </form> }}

      </div>

    </div>
  {{/with}}
</div>