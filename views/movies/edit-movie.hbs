<h2 class='text-2xl font-semibold text-gray-900 ml-10 mt-28'>New movie</h2>

<form class='w-full max-w-lg' action='/movies/{{movie._id}}/edit' method='POST'>
  <div class='flex flex-wrap mx-3 mb-6 my-14'>
    <div class='w-full px-3 mb-6 md:mb-0'>
      <label
        class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
        for='grid-first-name'
      >
        Title:
      </label>
      <input
        class='appearance-none block w-full bg-gray-200 text-gray-700 border rounded py-3 px-4 mb-3 leading-tight focus:border-gray-500 focus:bg-white'
        id='grid-first-name'
        type='text'
        placeholder='Title'
        name='title'
        value='{{movie.title}}'
      />

    </div>
    <div class='w-full px-3'>
      <label
        class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2'
        for='grid-last-name'
      >
        Genre:
      </label>
      <input
        class='appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500'
        id='grid-last-name'
        type='text'
        placeholder='Genre'
        name='genre'
        value='{{movie.genre}}'
      />
    </div>
    <div class='w-full px-3'>
      <label
        class='block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2 mt-3'
        for='grid-last-name'
      >
        Plot:
      </label>
      <input
        class='appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500'
        id='grid-last-name'
        type='text'
        placeholder='Plot'
        name='plot'
        value='{{movie.plot}}'
      />
    </div>

    <div class='m-3 xl:w-96'>
      <select
        class='form-select appearance-none bg-gray-200 block w-full px-3 py-1.5 text-base font-normal text-gray-700 bg-white bg-clip-padding bg-no-repeat border border-solid border-gray-300 rounded transition ease-in-out m-0 focus:text-gray-700 focus:bg-white focus:border-gray-500 focus:outline-none'
        aria-label='Default select example'
        name='cast'
        multiple
      >
        {{#each movie.cast}}
          <option value='{{this._id}}' selected>{{this.name}}</option>
        {{/each}}
        {{#each celebrities}}
          <option value='{{this._id}}'>{{this.name}}</option>
        {{/each}}
      </select>

    </div>
    <div>

      <button
        class='shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold mt-3 mx-3 py-2 px-4 rounded'
        type='submit'
      >
        Update
      </button>
    </div>
  </div>
</form>